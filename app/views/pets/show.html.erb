<h1><%=@pet.name %></h1>
<img><%= image_tag(@pet.image, width: "350") %></img>
<h2>Name: <%= @pet.name %></h2>
<p>Description: <%= @pet.description %></p>
<p>Approximate Age: <%= @pet.approximate_age %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Adoption Status: <%= @pet.adoption_status %></p>

<ul>
  <li><%= link_to 'Update Pet', "/pets/#{@pet.id}/edit" %>
  <li><%= link_to 'Delete', "/pets/#{@pet.id}", method: :delete %>
</ul>
