<section class="application-<%= @application.id %>-details">
  <h1>Name: <%= link_to "#{@application.name}", "/pet_applications/#{@application.id}"  %></h1>
  <p>Address: <%= @application.address %></p>
  <p>City: <%= @application.city %></p>
  <p>State: <%= @application.state %></p>
  <p>Zip: <%= @application.zip %></p>
  <p>Phone Number: <%= @application.phone_number %></p>
  <p>Description: <%= @application.description %></p>
</section>
<section class="application-<%= @application.id %>-pets">
  <h2>Pets Applied For:</h2>
  <% @application.pets.each do |pet| %>
    <%= link_to "#{pet.name}", "/pets/#{pet.id}"%>
    <% if pet.adoption_status == "adoptable" %>
      <%= link_to "Approve", "/pet_applications/#{@application.id}/#{pet.id}", id: "approve-#{pet.id}", method: :patch %>
    <% elsif pet.approved_application.id == @application.id %>
      <%= link_to "Revoke", "/pet_applications/#{@application.id}/#{pet.id}", id: "revoke-#{pet.id}", method: :patch %>
    <% end %>
  <% end %>
</section>
